{
  "manifest_version": 3,
  "name": "YC API & DOM",
  "version": "1.0",
  "description": "Базовые API и DOM для тестов YC",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon48.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}